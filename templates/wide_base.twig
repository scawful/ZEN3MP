{% include('header.html.twig') %}

<div class="wrapper">

    <header>{% block title %}{% endblock %}</header>

    <section class="columns">

        <div id="maincol" class="columnBase"> {% block main %} {% endblock %} </div>

    </section>

    <div id="adBox" class="columnBase">
        {% block advertisement %}
            <div class="titleBar">Ads served by Google</div>
            <div style="text-align: center; margin: 5px;">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- ZCMS -->
                <ins class="adsbygoogle"
                    style="display:block"
                    data-ad-client="ca-pub-8036786549441922"
                    data-ad-slot="6715135446"
                    data-ad-format="auto"
                    data-full-width-responsive="true"></ins>
                <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        {% endblock %}
    </div>

{% include('footer.twig') %}

