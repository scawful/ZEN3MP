{% extends "above/above.twig" %}
{% block title %} Timeline Post {% endblock %}

{% block main %}
    <div class="titleBar">Twitter: <a href="https://twitter.com/zeniea_">@zeniea_</a></div>
    <div class="article">

        <form class="post_form" action="" method="POST" autocomplete="off" enctype="multipart/form-data">

            <div class="input-group mb-3">
                <textarea rows="10" class="form-control" aria-label="With textarea" name="timeline_post" maxlength="250"></textarea>
            </div>

            <button class="btn btn-primary" name="twitter_post" type="submit" value="POST" >Submit</button>
        </form>

    </div>
{% endblock %}